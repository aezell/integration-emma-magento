<?xml version="1.0"?>
<config>
    <sections>
        <emmasection translate="label" module="emma">
        <class>separator-top</class>
            <label>Emma Settings</label>
            <tab>customer</tab>
            <sort_order>130</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <emma translate="label">
                    <label>Edit Emma Settings</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website></show_in_website>
                    <show_in_store></show_in_store>
                    <fields>
                          <emma_password translate="label">
                            <label>Private API Key</label>
							<frontend_type>password</frontend_type>
                            <comment>Password/Private Key for your Emma API. </comment>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                          </emma_password>
                          <emma_username translate="label">
                            <label>Public API Key</label>
                            <comment>Username/Public Key for your Emma API.</comment>
							<frontend_type>text</frontend_type>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                          </emma_username>
                          <emma_api_key translate="label">
                            <label>Account ID</label>
                            <comment>The API key for your Emma account.</comment>
							<frontend_type>text</frontend_type>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                          </emma_api_key>
                    </fields>
                </emma>
                <emma_lists translate="label">
                    <label>Select Emma Groups</label>
                    <sort_order>11</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                          <emma_groups translate="label">
                            <label>Groups</label>
                            <comment>Select which groups you would like to associate with this store</comment>
							<frontend_type>multiselect</frontend_type>
							<source_model>emma/emmasync</source_model>
                            <sort_order>0</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                          </emma_groups>
                    </fields>
                </emma_lists>
             </groups>
         </emmasection>
    </sections>
</config>